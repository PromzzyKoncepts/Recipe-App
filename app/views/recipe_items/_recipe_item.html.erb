<div id="<%= dom_id recipe_item %>">
  <p>
    <strong>Name:</strong>
    <%= recipe_item.name %>
  </p>

  <p>
    <strong>Preparation time:</strong>
    <%= recipe_item.preparation_time %>
  </p>

  <p>
    <strong>Cooking time:</strong>
    <%= recipe_item.cooking_time %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= recipe_item.description %>
  </p>

  <p>
    <strong>Public:</strong>
    <%= recipe_item.public %>
  </p>

  <p>
    <strong>User:</strong>
    <%= recipe_item.user_id %>
  </p>

</div>
