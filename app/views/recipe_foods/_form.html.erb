<%= form_with(model: recipe_food) do |form| %>
  <% if recipe_food.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(recipe_food.errors.count, "error") %> prohibited this recipe_food from being saved:</h2>

      <ul>
        <% recipe_food.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :recipe_item_id, style: "display: block", class: "label" %>
    <%= form.select :recipe_item_id, @recipe_items.map { |recipe_item| [recipe_item.name, recipe_item.id] } %>
  </div>

  <div class="field">
    <%= form.label :food_id, style: "display: block", class: "label" %>
    <%= form.select :food_id, @foods.map { |food| [food.name, food.id] } %>
  </div>

  <div class="field">
    <%= form.label :quantity, style: "display: block", class: "label" %>
    <%= form.number_field :quantity, required: true, class:"input" %>
  </div>

  <div>
    <%= form.submit class: "btn-submit" %>
  </div>
<% end %>
